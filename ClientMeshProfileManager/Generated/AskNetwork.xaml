<Page x:Class="Goedel.MeshProfileManager.Dialog_AskNetwork"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Dialog_AskNetwork">
    <DockPanel>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="32" 
            xml:space="preserve" Margin="25,25,25,0" DockPanel.Dock="Top">Do you want to use the mesh to manage your secure network profiles?
</TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" 
            xml:space="preserve" Margin="25,0,25,25" DockPanel.Dock="Top">Secure network profiles allow you to simplify management of your
network. 

</TextBlock>
        <StackPanel>

        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_ConfigureNetwork">Yes</Button>
            </StackPanel>
			<StackPanel Grid.Column="2">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_SkipNetwork">Skip</Button>
            </StackPanel>
		</Grid>


        </StackPanel>
    </DockPanel>
</Page>
