<Page x:Class="Goedel.MeshProfileManager.Dialog_AskEmailAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Dialog_AskEmailAccount">
    <DockPanel>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="32" 
            xml:space="preserve" Margin="25,25,25,0" DockPanel.Dock="Top">Do you want to use the mesh to secure this account?
</TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" 
            xml:space="preserve" Margin="25,0,25,25" DockPanel.Dock="Top"></TextBlock>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
				<Label FontSize="20"
					   VerticalAlignment="Top">Account Name</Label>
				<TextBlock FontSize="20" Name="Output_AccountName"
						 VerticalAlignment="Top"></TextBlock>
			</StackPanel>
            <StackPanel Orientation="Horizontal">
				<Label FontSize="20"
					   VerticalAlignment="Top">Email Address</Label>
				<TextBlock FontSize="20" Name="Output_AccountAddress"
						 VerticalAlignment="Top"></TextBlock>
			</StackPanel>
            <StackPanel Orientation="Horizontal">
				<Label FontSize="20"
					   VerticalAlignment="Top">Personal Name</Label>
				<TextBlock FontSize="20" Name="Output_AccountPersonal"
						 VerticalAlignment="Top"></TextBlock>
			</StackPanel>

        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_YesEmail">Yes</Button>
            </StackPanel>
			<StackPanel Grid.Column="2">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_NoEmail">No</Button>
            </StackPanel>
		</Grid>


        </StackPanel>
    </DockPanel>
</Page>
