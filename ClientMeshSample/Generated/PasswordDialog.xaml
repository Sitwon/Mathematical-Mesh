<Page x:Class="Goedel.MeshSampleClient.Dialog_PasswordDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Dialog_PasswordDialog">
    <DockPanel>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="32" 
            xml:space="preserve" Margin="25,25,25,0" DockPanel.Dock="Top">Store a new password.
</TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" 
            xml:space="preserve" Margin="25,0,25,25" DockPanel.Dock="Top">A Web browser using the mesh to manage passwords should provide 
a meshanism to delete stored passwords as well. If the user can
guarantee access from every browser they want to use, use
of strong password generation would be feasible.

</TextBlock>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
				<Label FontSize="20"
					   VerticalAlignment="Top">Web Site</Label>
				<TextBox FontSize="20" Name="Input_DomainName"
						 VerticalAlignment="Top" TextChanged="Changed_Input_DomainName" Width="400" 
						 ></TextBox>
			</StackPanel>
            <StackPanel Orientation="Horizontal">
				<Label FontSize="20"
					   VerticalAlignment="Top">Username</Label>
				<TextBox FontSize="20" Name="Input_Username"
						 VerticalAlignment="Top" TextChanged="Changed_Input_Username" Width="400" 
						 ></TextBox>
			</StackPanel>
            <StackPanel Orientation="Horizontal">
				<Label FontSize="20"
					   VerticalAlignment="Top">Password</Label>
				<TextBox FontSize="20" Name="Input_Password"
						 VerticalAlignment="Top" TextChanged="Changed_Input_Password" Width="400" 
						 ></TextBox>
			</StackPanel>

        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_AcceptPassword">Accept</Button>
            </StackPanel>
			<StackPanel Grid.Column="2">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_CancelPassword2">Cancel</Button>
            </StackPanel>
		</Grid>


        </StackPanel>
    </DockPanel>
</Page>
