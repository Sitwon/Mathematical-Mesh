<Page x:Class="Goedel.MeshSampleClient.Dialog_SelectApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Dialog_SelectApplication">
    <DockPanel>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="32" 
            xml:space="preserve" Margin="25,25,25,0" DockPanel.Dock="Top">Choose an action
</TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" 
            xml:space="preserve" Margin="25,0,25,25" DockPanel.Dock="Top">This program simulates an application using the Mesh for 
configuration management. You can view or modify the application
data for each of the applications supported.

</TextBlock>
        <StackPanel>

        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_Password">Password</Button>
                <TextBlock TextWrapping="Wrap" FontSize="16"   TextAlignment="Center"
						VerticalAlignment="Center"  Margin="20,20,20,20">Password Manager for Web browser or the like.
</TextBlock>
            </StackPanel>
			<StackPanel Grid.Column="2">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_Network">Network</Button>
                <TextBlock TextWrapping="Wrap" FontSize="16"   TextAlignment="Center"
						VerticalAlignment="Center"  Margin="20,20,20,20">Configuration parameters for network access including
DNS, VPN settings, SSH keys etc.
</TextBlock>
            </StackPanel>
			<StackPanel Grid.Column="4">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_Email">Email</Button>
                <TextBlock TextWrapping="Wrap" FontSize="16"   TextAlignment="Center"
						VerticalAlignment="Center"  Margin="20,20,20,20">Configuration parameters for an email account. Including
S/MIME and OpenPGP configuration data.
</TextBlock>
            </StackPanel>
		</Grid>


        </StackPanel>
    </DockPanel>
</Page>
